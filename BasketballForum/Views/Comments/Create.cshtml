@model BasketballForum.Models.Comment

@{
    ViewData["Title"] = "Create";
}

<h4 class="text-center mb-4">Leave a Comment</h4>

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <form asp-action="Create">
            <input type="hidden" asp-for="DiscussionId" />

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label for="content" class="form-label">Your Comment</label>
                <textarea asp-for="Content" id="content" class="form-control" rows="4" placeholder="Write your comment here..."></textarea>
            </div>

            <div class="d-flex justify-content-between">
                <div class="mb-3">
                    <input type="submit" value="Submit Comment" class="btn btn-primary w-100" />
                </div>
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-4">
    <a asp-action="Details" asp-controller="Discussions" asp-route-id="@Model.DiscussionId" class="btn btn-secondary">Back to Discussions</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
