@model BasketballForum.Models.Discussion

@{
    ViewData["Title"] = "Delete Discussion";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-danger text-white text-center">
                    <h3 class="mb-0">Delete Discussion</h3>
                </div>
                <div class="card-body">
                    <h5 class="text-center text-danger">Are you sure you want to delete this?</h5>
                    <hr>

                    <dl class="row">
                        <dt class="col-sm-4 fw-bold">Title:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Title)</dd>

                        <dt class="col-sm-4 fw-bold">Content:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Content)</dd>

                        <dt class="col-sm-4 fw-bold">Posted On:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.CreateDate)</dd>

                        @if (!string.IsNullOrEmpty(Model.ImageFilename))
                        {
                            <dt class="col-sm-4 fw-bold">Image:</dt>
                            <dd class="col-sm-8">
                                <img src="@Model.ImageFilename" class="img-thumbnail" style="max-width: 200px;" alt="Discussion Image">
                            </dd>
                        }
                    </dl>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="DiscussionId" />

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger fw-bold">Confirm Delete</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancel & Back</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
