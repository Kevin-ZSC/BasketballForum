@model IEnumerable<BasketballForum.Models.Discussion>

@{
    ViewData["Title"] = "Index";
}

<h1>Discussions</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Title</th>
            
            <th>Image</th>
            <th>Posted On</th>
            
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageFilename))
                    {
                        <img src="~/images/@item.ImageFilename" alt="Discussion Image" width="50" height="50" style="object-fit: cover;">
                    }
                </td>
                <td>@Html.DisplayFor(modelItem => item.CreateDate)</td>
               
                <td>
                    <a asp-action="Edit" asp-route-id="@item.DiscussionId" class="btn btn-sm btn-outline-primary">Edit</a>
                    <a asp-action="Detail" asp-route-id="@item.DiscussionId" class="btn btn-sm btn-outline-secondary">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.DiscussionId" class="btn btn-sm btn-outline-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

